{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} | Liste des Morceaux
{% endblock %}

{% block body %}

<h1 class="text-center display-4">
    Album   <span class="badge rounded-pill bg-info text-decoration-none">{{ album.titre }}</span>
</h1>

<div class="container my-5">
    <div class="card text-dark">
        <div class="row g-0">
            <div class="col-md-4 d-flex justify-content-center align-items-center bg-dark">
                <div style="height: 300px; overflow: hidden;">
                    <img src="{{ album.image }}" class="img-fluid rounded-start" alt="Image de profil {{ album.titre }}" style="object-fit: cover; width: 100%; height: 100%;">
                </div>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h2 class="card-title">
                            <a href="{{path('app_artiste_show',{'slug': album.artiste.slug})}}" class="text-decoration-none text-dark">{{ album.artiste.nom }} </a>
                        </h2>
                        <a href="{{ path('app_albums') }}" class="btn btn-warning btn-sm"><i class="bi bi-arrow-left-circle"></i> Retour</a>
                    </div>

                  <p class="card-text fw-bold">
                        
                        {% for style in album.styles %}
                        <p class="lead px-2 rounded fw-bold text-white" style="background-color: {{ style.couleur }};display:inline-block">
                            {{style.nom|capitalize}}
                            </p>
                        {% endfor %}
                    
                    <p class="lead">
                        {% if album.dateSortie|date("Y") == "1970" %}
                            <span class="badge rounded-pill bg-success text-decoration-none mt-3">Non renseigné</span>
                        {% else %}
                            <span class="badge rounded-pill bg-success text-decoration-none mt-3">{{ album.dateSortie|date("Y") }}</span>
                        {% endif %}

                    </p> 
                </div>
                <div class="card-footer">
                                        
                        {% if album.morceaus|length > 1 %}
                            <span class="mt-3">{{ album.morceaus|length }} Morceaux</span>
                        {% else %}
                            <span class="mt-3">{{ album.morceaus|length }} Morceau</span>
                        {% endif %}
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped text-center table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Piste</th>
                        <th scope="col">Titre</th>
                        <th scope="col">Durée</th>
                        {# <th scope="col">Morceaux</th> #}
                    </tr>
                </thead>
                <tbody>
               
                    {% for morceau in album.morceaus %}
                    <tr>
                        <td>
                            {{ loop.index }}
                        </td>
                        <td>
                            {{ morceau.titre }}
                        </td>
                        <td>
                            {{ morceau.duree }}
                        </td>
                    </tr>
                    {% endfor %} 
                </tbody>
            </table>
        </div>
    </div>
</div>



{% endblock %}
